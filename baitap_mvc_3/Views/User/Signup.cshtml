@model baitap_mvc_3.Models.Customer
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .gradient-custom {
            /* fallback for old browsers */
            background: #f093fb;
            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to bottom right, rgba(240, 147, 251, 1), rgba(245, 87, 108, 1));
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to bottom right, rgba(240, 147, 251, 1), rgba(245, 87, 108, 1))
        }

        .card-registration .select-input.form-control[readonly]:not([disabled]) {
            font-size: 1rem;
            line-height: 2.15;
            padding-left: .75em;
            padding-right: .75em;
        }

        .card-registration .select-arrow {
            top: 13px;
        }
    </style>
</head>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration</h3>
                            @using (Html.BeginForm("Signup", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control form-control-lg", @type = "email" })
                                            <label class="form-label" for="firstName">Email</label>
                                            <p class="text-danger">
                                                @TempData["customer-email-exist"]
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control form-control-lg", @type = "text" })
                                            <label class="form-label" for="lastName">Username</label>
                                            <p class="text-danger">
                                                @TempData["customer-username-exist"]
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 d-flex align-items-center">
                                        <div class="form-outline datepicker w-100">
                                            @Html.TextBoxFor(model => model.Address, htmlAttributes: new { @class = "form-control form-control-lg", @type = "text" })
                                            <label for="birthdayDate" class="form-label">Address</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            @Html.TextBoxFor(model => model.Phone, htmlAttributes: new { @class = "form-control form-control-lg", @type = "text" })
                                            <label class="form-label" for="lastName">Phone</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">
                                        <div class="form-outline">
                                            @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control form-control-lg", @type = "password" })
                                            <label class="form-label" for="emailAddress">Password</label>
                                            <p class="text-danger">
                                                @TempData["customer-password-error"]
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="password" id="password-check" class="form-control form-control-lg" name="passwordRepeat" />
                                            <label class="form-label" for="lastName">Repeat password</label>
                                            <p class="text-danger">
                                                @TempData["customer-password-not-match"]
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <input type="file" class="form-control form-control-lg" value="Choose profile" name="imageProfile" />
                                        <p class="text-danger">
                                            @TempData["customer-image-null"]
                                        </p>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <input class="btn btn-primary btn-lg" type="submit" value="Signup" />
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
