@model baitap_mvc_3.Models.Customer
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img id="image-profile-customer" src="@Model.Url" alt="Admin" class="rounded-circle" width="150">
                            <input type="file" id="imageProfile" name="imageProfileUpdate" class="hidden" />
                            <label id="label-imageProfile" for="imageProfile"><i class="fa fa-camera"></i>&ensp;Select image</label>
                            <div class="mt-3">
                                <h4>@Model.Username</h4>
                                <p class="text-muted font-size-sm">@Model.Address</p>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-sm">Change password</button>
                                <a class="btn btn-warning" href="~/Cart/CartIndex?customerID=@Model.ID">Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="modal-sm">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: red">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Enter password:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary" id="div-customer-password">
                                    <input id="customer-password" type="password" value="" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">New password:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input id="customer-password-new" type="password" value="" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Confirm password:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input id="customer-password-confirm" type="password" value="" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-between">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" id="customer-password-reset-submit" value="Save changes" />
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            @using (Html.BeginForm("UserProfile", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.ID)

                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">User name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Username
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Email
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @{
                                        var Phone = "";
                                        if (Model.Phone != null)
                                        {
                                            Phone = Model.Phone.Trim();
                                        }
                                    }
                                    @Html.EditorFor(model => Phone, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @{
                                        var Address = "";
                                        if (Model.Address != null)
                                        {
                                            Address = Model.Address.Trim();
                                        }
                                    }
                                    @Html.EditorFor(model => Address, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <input class="btn btn-info" id="submit-profile-button" type="submit" value="Save change" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section UserProfile{
    <style>
        body {
            margin-top: 20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0,0,0,.125);
            border-radius: .25rem;
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

            .gutters-sm > .col, .gutters-sm > [class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

        .mb-3, .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }

        #label-imageProfile {
            display: none;
            position: relative;
            right: 0px;
            top: -20px;
            color: #7f97af;
        }
    </style>
    <script>
        $("#image-profile-customer").mouseenter(function () {
            $("#label-imageProfile").css({ "display": "block" });
        })
        $("#image-profile-customer").mouseleave(function () {
            $("#label-imageProfile").css({ "display": "none" });
        })
        $("#label-imageProfile").mouseenter(function () {
            $(this).css({ "display": "block" });
        })
        $("#label-imageProfile").mouseleave(function () {
            $(this).css({ "display": "none" });
        })
        //image
        $("#imageProfile").change(function (event) {
            var img = URL.createObjectURL(event.target.files[0])
            console.log(event)
            $("#image-profile-customer").attr('src', img)
        })
        $("#customer-password-reset-submit").click(function () {
            var pass = $("#customer-password").val();
            var customerID = @Model.ID;
            var passNew = $("#customer-password-new").val();
            var passConfirm = $("#customer-password-confirm").val();
            if (passNew != passConfirm) {
                alert("Password is not match")
            }
            else {
                $.ajax({
                    url: "/User/PasswordReset",
                    type: "post",
                    data: { customerID: customerID, pass: pass, passNew: passNew },
                    success: function (data) {
                        alert(data.status)
                    }
                })
                $("#customer-password").val("");
                $("#customer-password-new").val("");
                $("#customer-password-confirm").val("");
            }
        })

    </script>
}